# SPECIFIC

# Pacman package manager

alias pacman="sudo -E pacman --noconfirm"
alias in="pacman -S"
alias aur="yaourt"
alias inn="yaourt -S --noconfirm --force"
alias outt="yaourt -R --noconfirm --force"
# alias i="pacman -Qi"
# alias inf="yaourt -Qi"
alias i="yaourt -Qi"
alias on="pacsearch"
alias out="pacman -R"
alias owner="pacman -Qo"
alias pkg='owner'
alias update="pacman -Syu"
# --groups
alias packages='pacman -Sg'
# --syncdeps --install
alias build="makepkg -si --noconfirm"
alias oppdep="pacdep -oppp"

# Systemd service manager

alias sctl='sudo -E systemctl'

alias sls='sctl list-unit-files --type=service'

alias sstt='sctl start'
alias sstp='sctl stop'
alias sres='sctl restart'

alias sen='sctl enable'
alias sdis='sctl disable'

alias start='sstt'
alias stop='sstp'
alias restart='sres'

alias enable='sen'
alias disable='sdis'

# Journald event manager

# --reverse (recent events on top)
alias journalctl='journalctl -r'
alias j='journalctl'

# --unit
alias ju='j -u'

# --catalog --pager-end
alias jls='j -xe'

# Netctl network manager

alias n="sudo -E netctl"
alias nstart="n start"
alias nstop="n stop"
alias nres="n restart"
alias nen="n enable"
alias ndis="n disable"

# Git

alias g='git'
alias c='g commit -a -m "Bulk commit :fish:"'
alias p='g push -v'


alias cl='g clone'
alias add='g add'
alias a='add'
alias remote='g remote'
alias commit='g commit'
alias push='g push'

# Pip Python package manager
alias pi="sudo -E -H pip"
alias pin="pi install"
alias pout="pi uninstall"
alias pon="pi search"
alias pinfo="pi show"

# Ruby gem package manager
alias gem="sudo -E gem"
alias gin="gem install"

# NodeJS

alias n="sudo -E npm"
# --global
alias nin="n install -g"
alias non="n search"

# Volume

