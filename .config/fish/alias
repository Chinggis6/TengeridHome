alias netstat="netstat -anp"
alias tcpkill="tcpkill -9 port"
# <port>/tcp
alias fuserk='fuser -k'

# --head
alias headers='curl -I'


alias highlight='highlight -O xterm256'
alias source-highlight='source-highlight -f esc256 -i'
