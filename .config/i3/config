# Volume

# Global volume control
set $step 5
bindsym XF86AudioRaiseVolume exec amixer set Master $step%+
bindsym XF86AudioLowerVolume exec amixer set Master $step%-

# Get volume
bindsym Ctrl+XF86AudioRaiseVolume exec notify-send $(pamixer --get-volume)
bindsym Ctrl+Shift+XF86AudioRaiseVolume exec notify-send $(mpc volume)

bindsym Ctrl+XF86AudioPlay exec notify-send $(mpc current -f "%title%")
bindsym Ctrl+Shift+XF86AudioPlay exec notify-send $(mpc current -f "%artist%")
